<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="450dp"
        android:id="@+id/frameLayout">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageButton"
            android:src="@drawable/talk"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right|center_vertical"
            android:onClick="onclicktalk"
            android:background="#ffffff"
            android:layout_marginRight="0dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:id="@+id/imageButton3"
            android:layout_gravity="center"
            android:src="@drawable/water"
            android:scaleType="centerCrop"
            android:background="#ffffff"
            android:adjustViewBounds="true"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="left|top"
            android:src="@drawable/celcius"
            android:scaleType="centerCrop"
            android:layout_marginRight="300dp"
            android:background="#ffffff"
            android:layout_marginLeft="-25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_marginRight="13dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/sun"
            android:scaleType="centerCrop"
            android:layout_marginLeft="50dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="460dp"
            android:background="#5061ce"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center_horizontal|bottom">

            <ImageView
                android:layout_width="247dp"
                android:layout_height="413dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:src="@drawable/grint"
                android:scaleType="centerCrop"
                android:layout_margin="0dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/plesure"
                android:layout_marginTop="90dp" />
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>
